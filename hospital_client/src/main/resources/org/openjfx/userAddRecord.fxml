<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.*?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
            minWidth="-Infinity" prefHeight="400.0" prefWidth="700.0" style="-fx-background-color: #2e3348;"
            xmlns="http://javafx.com/javafx/10.0.1" fx:controller="org.openjfx.controllers.UserAddRecordController">
    <children>
        <AnchorPane layoutY="85.0" prefHeight="315.0" prefWidth="700.0" style="-fx-background-color: #fafafa;">
            <children>
                <Button fx:id="AddRecordButton" layoutX="253.0" layoutY="199.0" mnemonicParsing="false"
                        onAction="#addRecord" prefHeight="38.0" prefWidth="195.0" style="-fx-border-radius: 10;"
                        text="Записаться">
                    <font>
                        <Font name="Arial Narrow Italic" size="19.0"/>
                    </font>
                </Button>
                <TextField fx:id="nameField" layoutX="36.0" layoutY="65.0" prefHeight="38.0" prefWidth="278.0"
                           promptText="Имя">
                    <font>
                        <Font size="16.0"/>
                    </font>
                </TextField>
                <TextField fx:id="lastnameField" layoutX="36.0" layoutY="119.0" prefHeight="38.0" prefWidth="278.0"
                           promptText="Фамилия">
                    <font>
                        <Font size="16.0"/>
                    </font>
                </TextField>
                <Button fx:id="back" layoutX="36.0" layoutY="256.0" mnemonicParsing="false" onAction="#goBack"
                        prefHeight="32.0" prefWidth="86.0" text="Назад"/>
                <Label layoutX="38.0" layoutY="24.0" text="Данные о пациенте">
                    <font>
                        <Font size="18.0"/>
                    </font>
                </Label>
                <TextField fx:id="numberField" layoutX="384.0" layoutY="65.0" prefHeight="38.0" prefWidth="278.0"
                           promptText="№ процедуры">
                    <font>
                        <Font size="16.0"/>
                    </font>
                </TextField>
                <Label layoutX="384.0" layoutY="24.0" text="Данные о процедуре">
                    <font>
                        <Font size="18.0"/>
                    </font>
                </Label>
            </children>
        </AnchorPane>
        <Label layoutX="87.0" layoutY="14.0" prefHeight="52.0" prefWidth="527.0" text="Введите необходимую информацию"
               textFill="WHITE">
            <font>
                <Font name="Arial Narrow Italic" size="37.0"/>
            </font>
        </Label>
    </children>
</AnchorPane>
